<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences (NtfyConfig) -->
        <include domain="sharedpref" path="." />

        <!-- Include database (subscriptions and messages) -->
        <include domain="database" path="." />
    </cloud-backup>

    <device-transfer>
        <!-- Include user preferences for device-to-device transfer -->
        <include domain="sharedpref" path="." />

        <!-- Include database for device-to-device transfer -->
        <include domain="database" path="." />
    </device-transfer>
</data-extraction-rules>
